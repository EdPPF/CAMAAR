<!DOCTYPE html>
<html lang="en">
<head>
    
    .btn-container {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-top: 20px;
    }
  </style>
</head>
<body>
<div class="container">
<h2>Primeiro acessoooo</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "field-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "fulano@aluno.unb.br", class: "field-input" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "field-label" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Sua senha secreta", class: "field-input" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "field-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme sua senha", class: "field-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "submit-button", data: { turbo: false } %>
  </div>
<% end %>

<div class="devise-links">
  <%= render "devise/shared/links" %>
</div>
</div>
</body>
</html>



  
